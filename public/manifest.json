{
  "manifest_version": 2,
  "name": "Mooze",
  "version": "0.0.1",
  "description": "A plain text description",

  "author": "Dennis Otugo",
  "background": {
    "persistent": true
  },
  "homepage_url": "https://github.com/bananas-and-trees/mooze",
  "offline_enabled": true,
  "short_name": "Mooze",
  "icons": {
    "64": "assets/icon-128.png",
    "128": "assets/icon-256.png"
  },
  "browser_action": {
    "default_icon": "assets/icon-128.png",
    "default_title": "Mooze",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["AudioPlayer.bundle.js", "registerServiceWorker.bundle.js"]
  },
  "permissions": ["activeTab", "tabs", "storage", "webRequest", "webRequestBlocking", "<all_urls>"]


}
